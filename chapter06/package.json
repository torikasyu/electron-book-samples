{
  "name": "electron-react-sample",
  "version": "1.0.0",
  "description": "Electron + React + TypeScript Testing Sample",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development && electron .",
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "npm run build && playwright test -c src/e2e/playwright.config.ts",
    "test:e2e:debug": "npm run build && playwright test -c src/e2e/playwright.config.ts --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "electron": "^28.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "playwright": "^1.40.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
